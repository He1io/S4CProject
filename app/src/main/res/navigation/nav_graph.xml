<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/nav_graph"
    app:startDestination="@id/socialActionSummaryFragment">

    <fragment
        android:id="@+id/socialActionSummaryFragment"
        android:name="com.he1io.s4cproject.ui.view.SocialActionSummaryFragment"
        android:label="">
        <action
            android:id="@+id/action_socialActionSummaryFragment_to_loginDialogFragment"
            app:destination="@id/loginDialogFragment" />
        <action
            android:id="@+id/action_socialActionSummaryFragment_to_socialActionAddFragment"
            app:destination="@id/socialActionAddFragment" />
    </fragment>
    <fragment
        android:id="@+id/loginDialogFragment"
        android:name="com.he1io.s4cproject.ui.view.LoginDialogFragment"
        android:label="LoginDialogFragment" >
        <action
            android:id="@+id/action_loginDialogFragment_to_socialActionSummaryFragment2"
            app:destination="@id/socialActionSummaryFragment" />
    </fragment>
    <fragment
        android:id="@+id/socialActionAddFragment"
        android:name="com.he1io.s4cproject.ui.view.SocialActionAddFragment"
        android:label="SocialActionAddFragment" >
        <action
            android:id="@+id/action_socialActionAddFragment_to_socialActionSummaryFragment"
            app:destination="@id/socialActionSummaryFragment" />
        <argument
            android:name="social_action_id"
            app:argType="string" />
    </fragment>
</navigation>